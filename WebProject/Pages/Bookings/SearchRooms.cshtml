@page
@model HotelWebApp.Pages.Bookings.SearchRoomsModel
@{
    ViewData["Title"] = "SearchRooms";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>SearchRooms</h1>
<h4>The differences between Moviegoers in choosing movies</h4>
<p>Specifically, this page allows you to find out the movies watched by Moviegoer A but not Moviegoer B.</p>


<div class="row">
    <div class="col-md-6">
        @* by default, a method="post" form will be rendered. *@
        <form asp-action="PeopleDiff">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <!--d-->
                <label asp-for="roomSearch.BedCount" class="control-label">Number of Beds Required</label>
                <select asp-for="roomSearch.BedCount" class="form-control">
                   
                    <option value="1">1 bed</option>
                    <option value="2">2 beds</option>
                    <option value="3">3 beds</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="roomSearch.CheckIn" class="control-label"></label>
                <input asp-for="roomSearch.CheckIn" class="form-control" />
                <span asp-validation-for="roomSearch.CheckIn" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="roomSearch.CheckOut" class="control-label"></label>
                <input asp-for="roomSearch.CheckOut" class="form-control" />
                <span asp-validation-for="roomSearch.CheckOut" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Compare" class="btn btn-primary" />
            </div>
        </form>
        </div>
    </div>

    @* Check this page is requested by 'get' or 'post' method.
        If 'post', then display the comparison results. *@
    @if (Model.DiffMovies != null)
    {
        <div>
            <hr />
            @if (Model.DiffMovies.Count == 0)
            {
                <h4>
                    There is no movie watched by MovieGoer A, but not by MovieGoerB.
                </h4>
            }
            else
            {
                <table class="table">
                    <!-- .table is a Bootstrap class giving table styles -->
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.DiffMovies[0].ID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DiffMovies[0].Level)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DiffMovies[0].BedCount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DiffMovies[0].Price)
                    </th>
                </tr>

                @foreach (var item in Model.DiffMovies)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Level)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BedCount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                    </tr>
                }
                </table>
            }
            </div>
}

@* Inlcude JavaScript for client-side vaildations.*@
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


