@page
@model HotelWebApp.Pages.Bookings.CreateBookingsModel
@{
    ViewData["Title"] = "CreateBookings";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
@{ var booking = ViewBag.MyBooking; }

<h1>Book a room</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        @* by default, a method="post" form will be rendered. *@
        <form asp-action="PeopleDiff">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="makeabook.RoomID" class="control-label"></label>
                <select asp-for="makeabook.RoomID" class="form-control" asp-items="ViewBag.RoomID"></select>
            </div>

            <div class="form-group">
                <label asp-for="makeabook.CheckIn" class="control-label"></label>
                <input asp-for="makeabook.CheckIn" class="form-control" />
                <span asp-validation-for="makeabook.CheckIn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="makeabook.CheckOut" class="control-label"></label>
                <input asp-for="makeabook.CheckOut" class="form-control" />
                <span asp-validation-for="makeabook.CheckOut" class="text-danger"></span>
            </div>



            <div class="form-group">
                <input type="submit" value="Compare" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@if (Model.DiffMovies != null)
{

    @if (Model.DiffMovies.Count == 0) //ViewBag.results.Count == 0
    {
        <h3 class="text-danger"> Room is not available for the requested booking period. </h3> }
    else
    {
        <h2>Confirmed Booking details</h2>
        <table class="table">
            <!-- .table is a Bootstrap class giving table styles -->
            <tr>
                <th>
                    Room ID
                </th>
                <th>
                    Level
                </th>
                <th>
                    Check in date
                </th>
                <th>
                    Check out date
                </th>
                <th>
                    Total Cost
                </th>
            </tr>


            <tr>
                <td>
                    @booking.RoomID
                </td>

                <td>
                    @foreach (var item in Model.DiffMovies)
                    {
                    @item.Level
                    }

                </td>
                <td>
                    @booking.CheckIn.ToShortDateString()
                </td>
                <td>
                    @booking.CheckOut.ToShortDateString()
                </td>
                <td>
                    @booking.Cost
                </td>
            </tr>



        </table>
}}
<div>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="BookingManagement">Back to List</a> }
    else
    {
        <a asp-action="Index">Back to List</a>}

</div>





@* Inlcude JavaScript for client-side vaildations.*@
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


